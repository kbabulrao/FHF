<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/sublayout"
    android:layout_alignParentTop="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/iv_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/default_placeholder" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rightlayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/frame1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:text="Event1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_event_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="this fanc lub is dedicated for fans of salman khan.salmankahan us very good actor in bollywod"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/appsecondryTextColor" />

            <TextView
                android:id="@+id/tv_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernamefc"
                android:maxLines="1"
                android:text="10/12/2016"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/appsecondryTextColor"
                android:textSize="8dp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>